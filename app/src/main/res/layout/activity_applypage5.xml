<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- 다음 버튼 -->
    <Button
        android:id="@+id/nextBtn"
        android:layout_width="332dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="605dp"
        android:backgroundTint="@color/mint"
        android:fontFamily="@font/suit_bold"
        android:radius="10px"
        android:text="다음"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="500dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/rectangle" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="14dp"
        android:text="5/6"
        android:fontFamily="@font/suit_regular"
        android:textColor="@color/medium_grey" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="23dp"
        app:srcCompat="@drawable/pawprint" />

    <!-- 위 위젯들은 모든 페이지에 공통으로 들어감 -->

    <RadioGroup
        android:id="@+id/rGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="195dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/suit_regular"
            android:text="대한항공"
            android:textColor="@color/black"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/suit_regular"
            android:text="아시아나항공"
            android:textColor="@color/black"/>

    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="166dp"
        android:fontFamily="@font/suit_regular"
        android:text="항공사"
        android:textColor="@color/black"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="77dp"
        android:text="비행티켓 정보"
        android:textColor="@color/black"
        android:fontFamily="@font/suit_regular"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="50dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="115dp"
        android:fontFamily="@font/suit_regular"
        android:text="예약한 티켓 정보를 입력해주세요"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="114dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="307dp"
        android:fontFamily="@font/suit_regular"
        android:text="항공기 편명"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="87dp"
        android:layout_marginTop="310dp"
        android:text="EX) KE081, OZ222"
        android:textSize="12sp"
        android:textColor="@color/dark_grey" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="415dp"
        android:fontFamily="@font/suit_regular"
        android:text="예약번호 12자리"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/edtRNum"
        android:layout_width="307dp"
        android:layout_height="35dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="443dp"
        android:background="@drawable/edtround"
        android:fontFamily="@font/suit_regular"
        android:inputType="number"/>

    <EditText
        android:id="@+id/edtFName"
        android:layout_width="310dp"
        android:layout_height="35dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="335dp"
        android:background="@drawable/edtround"
        android:fontFamily="@font/suit_regular" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="60dp"
        app:srcCompat="@drawable/rectangle5" />



</RelativeLayout>