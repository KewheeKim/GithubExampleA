<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterActivity"> <!-- 회원가입 화면 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/createUsername"
            android:layout_width="332dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="246dp"
            android:background="@drawable/rect_enter"
            android:hint="   아이디 입력"
            android:textSize="16sp"
            android:textColorHint="#D9D9D9"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/createPassword"
            android:layout_width="332dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="322dp"
            android:background="@drawable/rect_enter"
            android:hint=" 비밀번호 입력"
            android:textSize="16sp"
            android:textColorHint="#D9D9D9"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/checkPassword"
            android:layout_width="332dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="378dp"
            android:background="@drawable/rect_enter"
            android:hint=" 비밀번호 확인"
            android:textSize="16sp"
            android:textColorHint="#D9D9D9"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnToRegister"
            android:layout_width="332dp"
            android:layout_height="52dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="446dp"
            android:text="@string/btnRegister"
            android:textAppearance="@style/btnLogin"
            android:background="@drawable/rect_login"
            />

        <View
            android:id="@+id/logotype3"
            android:layout_width="300dp"
            android:layout_height="222dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/togedogimg" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>