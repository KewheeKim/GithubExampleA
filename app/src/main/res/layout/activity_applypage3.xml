<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 다음 버튼 -->
    <Button
        android:id="@+id/nextBtn"
        android:layout_width="332dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="605dp"
        android:backgroundTint="@color/mint"
        android:fontFamily="@font/suit_bold"
        android:radius="10px"
        android:text="다음"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="500dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/rectangle" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="14dp"
        android:text="3/6"
        android:fontFamily="@font/suit_regular"
        android:textColor="@color/medium_grey" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="23dp"
        app:srcCompat="@drawable/pawprint" />


    <!-- 위 위젯들은 모든 페이지에 공통으로 들어감 -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="77dp"
        android:text="신청자 정보"
        android:textColor="@color/black"
        android:fontFamily="@font/suit_bold"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="115dp"
        android:fontFamily="@font/suit_regular"
        android:text="신청자의 개인 정보를 입력하세요"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="166dp"
        android:text="이름"
        android:textColor="@color/black"
        android:fontFamily="@font/suit_regular"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="195dp"
        android:layout_marginBottom="195dp"
        android:background="@drawable/edtround"
        android:fontFamily="@font/suit_regular"
        android:hint="    이름 입력"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="292dp"
        android:text="휴대폰 번호 / 항공권 예약 시 남긴 연락처"
        android:textColor="@color/black"
        android:fontFamily="@font/suit_regular"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edtNumber"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginTop="321dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/edtround"
        android:fontFamily="@font/suit_regular"
        android:hint="  '-'없이 입력'"
        android:inputType="phone"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="413dp"
        android:text="이메일"
        android:textColor="@color/black"
        android:fontFamily="@font/suit_regular"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtEmail1"
        android:layout_width="158dp"
        android:layout_height="40dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="442dp"
        android:background="@drawable/edtround"
        android:fontFamily="@font/suit_regular"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edtEmail2"
        android:layout_width="138dp"
        android:layout_height="40dp"
        android:layout_marginStart="206dp"
        android:layout_marginTop="442dp"
        android:background="@drawable/edtround"
        android:fontFamily="@font/suit_regular"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="448dp"
        android:layout_marginStart="180dp"
        android:fontFamily="@font/suit_bold"
        android:textSize="14sp"
        android:text="@"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="180dp"
        app:srcCompat="@drawable/rectangle3" />

</RelativeLayout>