                android:id="@+id/noticeArrow"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="304dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="322dp"
                android:background="@drawable/ic_arrow"/> -->

            <!-- height wrap 고정 필수 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/expandable"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="310dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6.6dp"
                app:contentPadding="10dp"
                app:cardBackgroundColor="@color/light_light_grey">

                <LinearLayout
                    android:id="@+id/layouts"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- 첫 번째 LinearLayout (titleText와 noticeIcon을 가로로 배치) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/noticeIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/ic_info"/>

                        <TextView
                            android:id="@+id/titleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="9dp"
                            android:text="@string/demo"
                            android:textAppearance="@style/noticeTitle" />

                        <View
                            android:id="@+id/noticeArrow"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="96dp"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/ic_arrow"/>
                    </LinearLayout>

                    <!-- 두 번째 LinearLayout (detailsText를 가로로 배치) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/detailsText"
                            android:visibility="gone"
                            android:text="@string/faketext"
                            android:textAppearance="@style/details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 나와 함께한 친구들 -->
            <TextView
                android:id="@+id/withmeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="393dp"
                android:text="@string/withmeTitle"
                android:textAppearance="@style/withmeTitle"
                android:lineSpacingExtra="5sp"
                android:translationY="-2.52sp"
                android:gravity="center_horizontal|top" />

            <!-- 드디어 가족을 만났어요 -->
            <TextView
                android:id="@+id/meetFamilyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="585dp"
                android:text="@string/meetFamilyTitle"
                android:textAppearance="@style/withmeTitle"
                android:lineSpacingExtra="5sp"
                android:translationY="-2.52sp"
                android:gravity="center_horizontal|top" />

            <View
                android:id="@+id/meetFamilyBg"
                android:layout_width="328dp"
                android:layout_height="112dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="615dp"
                android:background="@drawable/rect_board" />

            <View
                android:id="@+id/meetFamilyImg"
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="238dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="624dp"
                android:background="@drawable/img_family" />

            <TextView
                android:id="@+id/meetFamilyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="28dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="633dp"
                android:text="@string/meetFamilyName"
                android:textAppearance="@style/meetFamilyName"
                android:lineSpacingExtra="4sp"
                android:translationY="-1.76sp"
                android:gravity="top"
                />

            <TextView
                android:id="@+id/meetFamilyContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="28dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="660dp"
                android:text="@string/meetFamilyContent"
                android:textAppearance="@style/meetFamilyContent"
                android:lineSpacingExtra="3sp"
                android:translationY="-1.51sp"
                android:gravity="top" />


            <!-- 평생 가족을 기다려요 -->
            <TextView
                android:id="@+id/waitFamilyTitle"
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="781dp"
                android:layout_marginBottom="150dp"
                android:text="@string/waitFamilyTitle"
                android:textAppearance="@style/withmeTitle"
                android:lineSpacingExtra="5sp"
                android:translationY="-2.52sp"
                android:gravity="center_horizontal|top" />

        </RelativeLayout>

    </ScrollView>




</FrameLayout>