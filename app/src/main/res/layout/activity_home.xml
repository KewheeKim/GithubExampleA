<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"> <!-- 홈 화면 -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 메인홈 뒷배경 -->
            <View
                android:id="@+id/bg_main"
                android:layout_width="360dp"
                android:layout_height="297dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="@color/mint" />

            <!-- 메인홈 강아지 사진 -->
            <View
                android:id="@+id/img_dog_1"
                android:layout_width="161dp"
                android:layout_height="260dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="212dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="23dp"
                android:background="@drawable/img_dog"
                android:alpha="1" />

            <!-- 신청 전 문구 -->
            <TextView
                android:id="@+id/text_entertitle"
                android:layout_width="277dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="32dp"
                android:text="@string/beforeVol"
                android:textAppearance="@style/beforeVol"
                android:lineSpacingExtra="5sp"
                android:translationY="-2.52sp"
                android:gravity="top" />

            <!-- 신청 전 티켓 -->
            <View
                android:id="@+id/vector"
                android:layout_width="328dp"
                android:layout_height="147dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="136dp"
                android:background="@drawable/vector_ticket" />

            <!-- 뛰는 강아지 -->
            <View
                android:id="@+id/running_dog"
                android:layout_width="118dp"
                android:layout_height="145dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="137dp"
                android:background="@drawable/ic_dog" />

            <!-- 신청하러 가기 -->
            <TextView
                android:id="@+id/applyVol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="181dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="174dp"
                android:text="@string/applyVol"
                android:textAppearance="@style/applyVol"
                android:lineSpacingExtra="4sp"
                android:translationY="-2.02sp"
                android:gravity="center_horizontal|top" />

            <!-- 플러스 아이콘 -->
            <ImageButton
                android:id="@+id/plus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="226dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="210dp"
                android:background="@drawable/ic_plus" />

            <!-- 이동 봉사 시 주의사항-->
            <!--<View
                android:id="@+id/noticeBg"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
