<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginActivity"> <!-- 로그인 화면 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/logotype"
            android:layout_width="300dp"
            android:layout_height="222dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/togedogimg" />

        <EditText
            android:id="@+id/enterUsername"
            android:layout_width="332dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="257dp"
            android:background="@drawable/rect_enter"
            android:hint="   아이디 입력"
            android:textSize="16sp"
            android:textColorHint="#D9D9D9"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/enterPassword"
            android:layout_width="332dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="313dp"
            android:background="@drawable/rect_enter"
            android:hint=" 비밀번호 입력"
            android:textSize="16sp"
            android:textColorHint="#D9D9D9"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="332dp"
            android:layout_height="52dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="381dp"
            android:text="@string/btnLogin"
            android:textAppearance="@style/btnLogin"
            android:background="@drawable/rect_login" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="332dp"
            android:layout_height="52dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="445dp"
            android:text="@string/btnRegister"
            android:textAppearance="@style/btnRegister"
            android:background="@drawable/rect_signup" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>