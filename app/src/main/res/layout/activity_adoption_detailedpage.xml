<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="800dp"
    android:background="#FFFFFF"
    tools:context=".AdoptionDetailedpage">
<!-- 입양 후기 상세 페이지-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text_reviewdetailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="22dp"
                android:fontFamily="@font/suit"
                android:gravity="top"
                android:lineSpacingExtra="5sp"

                android:text="크리스마스에 찾아온 소중한 가족"
                android:textColor="#121212"
                android:textSize="20sp"
                android:textStyle="bold"
                android:translationY="-2.52sp" />

            <View
                android:id="@+id/rectangle_"
                android:layout_width="360dp"
                android:layout_height="3dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="134dp"
                android:layout_marginEnd="-4dp"
                android:background="#F4F4F4" />

            <TextView
                android:id="@+id/text_entertitle"
                android:layout_width="326dp"
                android:layout_height="96dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="120dp"
                android:fontFamily="@font/suit"
                android:gravity="top"
                android:lineSpacingExtra="4sp"
                android:text="가디에게 크리스마스 선물로 엄마, 아빠, 두 오빠와 덩치 큰 여동생 베리와 레오가 생겼습니다. 가디는 보령 불법 무허가 번식장에서 구조된 3살 추정 강아지입니다."
                android:textColor="#121212"
                android:textSize="16sp"
                android:translationY="-2.02sp" />

            <View
                android:id="@+id/rectangle_32"
                android:layout_width="328dp"
                android:layout_height="328dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="230dp"
                android:layout_marginEnd="13dp"
                android:background="@drawable/picture1" />

            <View
                android:id="@+id/rectangle_22"
                android:layout_width="328dp"
                android:layout_height="328dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="577dp"
                android:layout_marginEnd="13dp"
                android:background="@drawable/picture2" />

            <TextView
                android:id="@+id/text_reviewdatedetailed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/suit"
                android:gravity="center_vertical"
                android:lineSpacingExtra="1sp"
                android:text="2023.12.25 월요일 17:50"
                android:textColor="#181818"
                android:textSize="12sp" />


            <View
                android:id="@+id/rect_occupy"
                android:layout_width="360dp"
                android:layout_height="51dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="900dp"
                android:background="#FFFFFF"
                />


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>